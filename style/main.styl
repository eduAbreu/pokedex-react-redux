@import url('https://fonts.googleapis.com/css?family=Fira+Sans|Indie+Flower');

html, body
  width 100%
  font-size 16px
  font-weight 400
  font-family 'Fira Sans', sans-serif
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  margin 0px
  padding 0px
  color #282828
  background-color #f8f8f8

*
  outline none

a
  outline none
  &:hover, &:focus, &:active
    text-decoration none
    outline none

.list
  margin 0px
  padding 0px
  list-style none


.jumbotron-container
  position relative
  background-color #E3350D;
  padding 40px 0px
  margin-bottom 60px

  h1
    color #fff
    font-size 3rem
    letter-spacing 1px
    font-family 'Indie Flower', cursive

  .img-responsive
    width 50px
    position absolute
    top calc(100% - 25px)
    left 50%
    transform translateX(-50%) scale(1)
    transition transform 300ms ease 0s
    will-change transform
    &:hover
      transform translateX(-50%) scale(1.5)
    &.loading
      animation load infinite 2s linear

@keyframes load
  0%
    transform translateX(-50%) scale(1)
  50%
    transform translateX(-50%) scale(1.5)
  100%
    transform translateX(-50%) scale(1)  
